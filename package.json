{
  "name": "mfa-architecture",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-cli.js",
    "dev:legacy": "tsx scripts/dev-manager.ts",
    "dev:all": "concurrently \"pnpm --filter mfa-host dev\" \"pnpm --filter @mfa/framework dev\" \"pnpm --filter @mfa/micro-app-1 dev\" \"pnpm --filter @mfa/micro-app-2 dev\" \"pnpm --filter @mfa/header dev\" \"pnpm --filter @mfa/pip dev\"",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "install:all": "pnpm install",
    "preview:host": "pnpm --filter mfa-host preview"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^20.0.0",
    "chalk": "^5.3.0",
    "concurrently": "^8.2.2",
    "inquirer": "^12.9.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  }
}